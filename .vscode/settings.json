{
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false, // enable per language
    "editor.formatOnType": true,
    "editor.stickyTabStops": true,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "editor.fontSize": 12,
    "editor.fontFamily": "'Noto Sans Mono', 'Source Code Pro', 'Droid Sans Mono'",
    "html.format.wrapLineLength": 80,
    "files.autoSave": "onFocusChange",
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "javascript.format.semicolons": "insert",
    "javascript.format.insertSpaceAfterConstructor": true,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "prettier.configPath": ".prettierrc",
    "prettier.prettierPath": "/usr/lib/prettier",
    "prettier.tabWidth": 4,
    "python.analysis.extraPaths": [
        ".venv/bin",
        ".venv/lib/python3.10/site-packages"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "[python]": {
        "editor.formatOnPaste": false, // black doesn't support this feature
        "editor.formatOnSave": true
    }
}
